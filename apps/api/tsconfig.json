{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "moduleResolution": "Bundler",

    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleDetection": "force"
    "skipLibCheck": true,
    "resolveJsonModule": true
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
